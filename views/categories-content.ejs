<main class="float">
  <%if(typeof posts !== 'undefined'){%>
  <!-- sidebar -->
  <div id="sidenav">
    <aside>
      <div class="aside_close" id="close">&times;</div>

      <%categories.forEach((category)=>{%>
      <header><%=category.name%> Tutorial</header>
      <%})%>

      <ul>
        <%posts.forEach((post)=>{%>
        <li>
          <a href="/post/<%=post.slug%>/<%=post.category%>"><%=post.name%></a>
        </li>
        <%})%>
      </ul>
    </aside>
  </div>

  <!-- for advert -->
  <!-- <div class="advert">
    <h1>Ad Space</h1>
    <img class="img" src="/images/advert.svg" alt="ad" width="150" height="250"/>
  </div> -->

  <!-- page_content -->

  <div class="page_content">
    <%categories.forEach((category)=>{%>
      <section class="category_Options_container">
        <% if(loggedin){%>
          <a href="/editCategory/<%=category._id%>" class="edit"
           ><i class="fa fa-pencil" aria-hidden="true" style="color: #063146"></i>
           Edit Category</a>

           <form action="/deleteCategory/<%=category._id%>?_method=DELETE" method="POST">
                <!-- For csrf -->
      <!-- name has to be _csrf(this lets the package do the validation for us) -->
      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
      <!-- for csrf ends -->
             <i class="fa fa-trash" aria-hidden="true" style="color: #063146"></i>
             <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete Category</button>
           </form>
        <%}%>

        
    </section>
    <!-- <div class="aside_open" id="open">
      <div class="bars"></div>
      <div class="bars"></div>
      <div class="bars"></div>
    </div> -->
    <div class="aside_open" id="open">Table of Content +</div>
    <header class="course_intro">
      <h2><%=category.name%></h2>

      <p>Introduction to <%=category.name%></p>
    </header>
    <p>
      <!-- <%=category.body%> -->
      <%-category.purifiedHtml%>
    </p>
  </div>
  <%})%> 
  
  <%}%>
</main>

<!-- DETAILS PAGE -->
<main class="float">
  <%if(typeof postDetails !== 'undefined'){%>
  <div id="sidenav">
    <aside>
      <div class="aside_close" id="close">&times;</div>
      <header><%=postDetails.category%> Tutorial</header>
      <ul>
        <%post_Names.forEach((post_Name)=>{%>
        <li>
          <a href="/post/<%=post_Name.slug%>/<%=post_Name.category%>"
            ><%=post_Name.name%></a
          >
        </li>
        <%})%>
      </ul>
    </aside>
  </div>
  <!-- for advert -->
  <!-- <div class="advert">
    <h1>Ad Space</h1>
    <img class="img" src="/images/advert.svg" alt="ad" width="150" height="250"/>
  </div> -->
  
  <div class="page_content">
    <section class="option_content">
    <% if(loggedin){%>
      <form action="/deletePost/<%=postDetails._id%>?_method=DELETE" method="POST">
      <!-- For csrf -->
      <!-- name has to be _csrf(this lets the package do the validation for us) -->
      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
      <!-- for csrf ends -->
        <i class="fa fa-trash" aria-hidden="true" style="color: #063146"></i>
        <button type="submit" class="delete_btn" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
      </form>

      <a href="/editPost/<%=postDetails._id%>" class="edit"
        ><i class="fa fa-pencil" aria-hidden="true" style="color: #063146"></i>
        Edit</a
      >
    <%}%>
    </section>
    <div class="aside_open" id="open" title="open sidebar">
      <div class="aside_open" id="open">Table of Content +</div>
    </div>
    <header class="course_intro">
      <h2><%=postDetails.category%></h2>
      <p><%=postDetails.name%></p>
    </header>
    <p>
      <!-- <%=postDetails.body%> -->
      <%-postDetails.purifiedHtml%>
    </p>
  </div>
  <%}%>
</main>
